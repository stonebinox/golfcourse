{% extends "layout.html" %}
{% block content %}
<body ng-app="golf">
    <div id="body"></div>
    <div id="header">
        <nav class="navbar navbar-default">
            <div class="container-fluid">
                <div class="navbar-header">
                    <a class="navbar-brand" href="#"><img src="images/putt-putt.png" border=0 alt="Putt Putt" class="img-rounded" width="75" height="25"></a>
                </div>
                <ul class="nav navbar-nav">
                    <li class="active"><a href="#">Home</a></li>
                    <li class="dropdown"><a class="dropdown-toggle" data-toggle="dropdown" href="#">Products <span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="#">Product 1</a></li>
                            <li><a href="#">Product 2</a></li>
                            <li><a href="#">Product 3</a></li>
                        </ul>
                    </li>
                </ul>
                
            </div>
        </nav>
    </div>
    <div id="map" ng-controller="map" ng-init="initMap();getUserCurrentLocation();courseSearch='';">
        <div id="searchbar">
            <form name="coursesearch">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Type to start searching" name="coursesearch" ng-model="courseSearch" ng-change="searchCourses()">
                </div>
            </form>
        </div>
        <div id="mapcontent"></div>
    </div>
    <div class="container-fluid">
        <div id="myModal" class="modal fade" role="dialog"></div>
    </div>
    <div id="footer" onclick="window.location='https://twitter.com/thedustmakers';"></div>
